<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B132B"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil do Aluno"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFD700"
            android:layout_marginBottom="30dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/ivFotoPerfil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Foto de perfil" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvNomeCompleto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome completo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MatrÃ­cula: "
                android:textSize="14sp"
                android:textColor="#B0B0B0" />

            <TextView
                android:id="@+id/tvMatricula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12345"
                android:textSize="14sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- E-mail -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail: "
                android:textSize="14sp"
                android:textColor="#B0B0B0" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aluno@email.com"
                android:textSize="14sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Telefone -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefone: "
                android:textSize="14sp"
                android:textColor="#B0B0B0" />

            <TextView
                android:id="@+id/tvTelefone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(11) 99999-9999"
                android:textSize="14sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Turma -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turma: "
                android:textSize="14sp"
                android:textColor="#B0B0B0" />

            <TextView
                android:id="@+id/tvTurma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADS- 2025"
                android:textSize="14sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <Button
            android:id="@+id/btnPagamentos"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Pagamentos"
            android:textSize="16sp"
            android:backgroundTint="#FFD700"
            android:textColor="#0B132B"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnEventos"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Eventos"
            android:textSize="16sp"
            android:backgroundTint="#FFD700"
            android:textColor="#0B132B"
            android:layout_marginBottom="12dp" />


        <Button
            android:id="@+id/btnEditarPerfil"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Editar Perfil"
            android:textSize="16sp"
            android:backgroundTint="#FFD700"
            android:textColor="#0B132B"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnSair"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Sair"
            android:textSize="16sp"
            android:backgroundTint="#FFD700"
            android:textColor="#0B132B"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView>